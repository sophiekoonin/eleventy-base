---
pagination:
    data: contentful-page
    size: 1
    alias: pg
    addAllPagesToCollections: true
permalink: "{{ pg.pageSlug | slug }}/"
tags: "page"
layout: layout.njk
eleventyComputed:
  title: "{{ pg.heading}}"
  subheading: "{{ pg.subheading }}"
  description: "{{ pg.pageDescription }}"
  logo: "{{ pg.logo.fields.file.url }}"
---
  {%- for contentItem in pg.pageContent.content -%}
  {% if contentItem.nodeType == "paragraph" and contentItem.content[0].value != "" %}
      {% paragraphBlock contentItem %}
      {% elif contentItem.data.target.sys.contentType.sys.id == "contentBlock" %}
        {% contentBlock contentItem %}
      {% elif contentItem.data.target.sys.contentType.sys.id == "textAndImageBlock" %}
          {% textAndImageBlock contentItem %}
      {% endif %}
  {% endfor %}
